<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/white"
     android:padding="16dp">

    <ImageView
         android:layout_height="60dp"
         android:layout_width="60dp"
         android:src="@drawable/location_pin"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="100dp"
         android:id="@+id/locImg" />

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:textColor="@color/black"
         android:layout_marginTop="90dp"
         app:layout_constraintTop_toBottomOf="@id/locImg"
         android:background="@drawable/border"
         android:hint="Phone Number"
         app:layout_constraintStart_toStartOf="parent"
         android:textColorHint="@color/watermelon"
         android:fontFamily="@font/rajdhani_regular"
         app:layout_constraintWidth_percent="0.8"
         app:layout_constraintEnd_toEndOf="parent"
         android:drawableStart="@drawable/phone"
         android:inputType="number"
         android:id="@+id/phNumET" />

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:textColor="@color/black"
         android:layout_marginTop="20dp"
         app:layout_constraintTop_toBottomOf="@id/phNumET"
         android:background="@drawable/border"
         android:hint="Password"
         android:textColorHint="@color/watermelon"
         app:layout_constraintStart_toStartOf="@id/phNumET"
         android:fontFamily="@font/rajdhani_regular"
         app:layout_constraintWidth_percent="0.8"
         app:layout_constraintEnd_toEndOf="@id/phNumET"
         android:drawableStart="@drawable/lock"
         android:inputType="textPassword"
         android:id="@+id/passET" />

    <CheckBox
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:buttonTint="@color/watermelon"
         app:layout_constraintStart_toStartOf="@id/passET"
         android:fontFamily="@font/rajdhani_medium"
         android:textColor="@color/black"
         android:layout_marginTop="20dp"
         app:layout_constraintTop_toBottomOf="@id/passET"
         android:id="@+id/rememberMeCB"
         android:text="Remember me" />

    <Button
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:padding="0dp"
         android:textColor="@color/black"
         app:layout_constraintTop_toBottomOf="@id/passET"
         android:background="@android:color/transparent"
         android:paddingBottom="0dp"
         android:fontFamily="@font/rajdhani_medium"
         android:textAllCaps="false"
         app:layout_constraintEnd_toEndOf="@id/passET"
         app:layout_constraintBaseline_toBaselineOf="@id/rememberMeCB"
         android:id="@+id/forgetPassBT"
         android:paddingTop="0dp"
         android:text="Forget Password ?" />

    <Button
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:textSize="18sp"
         android:textColor="@color/white"
         android:layout_marginTop="80dp"
         app:layout_constraintTop_toBottomOf="@id/passET"
         android:background="@drawable/login_button"
         app:layout_constraintStart_toStartOf="parent"
         android:fontFamily="@font/rajdhani_semibold"
         app:layout_constraintWidth_percent="0.8"
         android:textAllCaps="false"
         app:layout_constraintEnd_toEndOf="parent"
         android:text="Login"
         android:id="@+id/loginBT" />

    <Button
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:background="@android:color/transparent"
         app:layout_constraintStart_toStartOf="parent"
         android:textSize="20sp"
         android:fontFamily="@font/rajdhani_semibold"
         android:textAllCaps="false"
         android:textColor="@color/black"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/loginBT"
         android:text="Sign Up" />

</androidx.constraintlayout.widget.ConstraintLayout>